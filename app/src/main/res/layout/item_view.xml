<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginBottom="10dp"
    android:orientation="vertical"
    android:background="@drawable/rounded_corner"
    xmlns:tools="http://schemas.android.com/tools">



        <TextView
            android:id="@+id/sendingTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20dp"
            tools:text="Send on Dec 31 2020" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/beforeEmoji"
                android:layout_width="43dp"
                android:layout_height="39dp"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/arrow"
                android:layout_width="43dp"
                android:layout_height="39dp"

                tools:srcCompat="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/afterEmoji"
                android:layout_width="43dp"
                android:layout_height="39dp"

                tools:srcCompat="@tools:sample/avatars" />
        </LinearLayout>

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#393939"
            tools:text="My long long long descrption" />

        <TextView
            android:id="@+id/createdTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textColor="#858484"
            android:textSize="12dp"
            tools:text="Jan 21 2020 " />

    </LinearLayout>

