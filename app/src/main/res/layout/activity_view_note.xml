<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00B0FF"
    android:padding="10dp"
    tools:context=".ViewHistoryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/banner"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:text="Today's Note"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/createdTime"
            android:layout_width="402dp"
            android:layout_height="wrap_content"
            android:textColor="#858484"
            android:textSize="12dp"
            tools:text="You wrote this note on Jan 21 2020 " />

        <TextView
            android:id="@+id/text"
            android:layout_width="397dp"
            android:layout_height="269dp"
            android:layout_marginTop="29dp"
            android:textColor="#393939"
            tools:text="My long long long descrption" />

        <TextView
            android:id="@+id/mood_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="left"
            android:text="How do you feel after reading the note?"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="341dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_corner"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageButton
                android:id="@+id/mood_image1"
                android:layout_width="60dp"
                android:layout_height="65dp"
                android:background="@drawable/emoji_1" />

            <ImageButton
                android:id="@+id/mood_image2"
                android:layout_width="63dp"
                android:layout_height="66dp"
                android:background="@drawable/emoji_2" />

            <ImageButton
                android:id="@+id/mood_image3"
                android:layout_width="60dp"
                android:layout_height="66dp"
                android:background="@drawable/emoji_3" />

            <ImageButton
                android:id="@+id/mood_image4"
                android:layout_width="62dp"
                android:layout_height="66dp"
                android:background="@drawable/emoji_4" />

            <ImageButton
                android:id="@+id/mood_image5"
                android:layout_width="64dp"
                android:layout_height="62dp"
                android:background="@drawable/emoji_5" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/viewNextBtn"
            :paddingRight="10dp"
            android:layout_width="94dp"
            android:layout_height="40dp"
            android:background="@drawable/arrow"
            android:scaleType="center" />
    </LinearLayout>


</RelativeLayout>